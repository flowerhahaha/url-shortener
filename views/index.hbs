<main class="d-flex flex-column align-items-center mt-5 mx-auto">
  <i class="fa-solid fa-link mt-4"></i>

  {{#if shortenedUrl}}
  <h5 class="my-4">
    Success! Please use this link: <a href="{{ shortenedUrl }}" target="_blank">{{ shortenedUrl }}</a>
  </h5>
  <div>
    <a href="/" class="btn btn-lg btn-primary mx-2">Back</a>
    <button class="btn btn-lg btn-info mx-2" onclick="copyToClipboard()">Copy</button>
  </div>
  <small class="mt-3">Original URL: <a href="{{ originalUrl }}" target="_blank">{{ originalUrl }}</a></small>

  {{else}}
  <form action="/" method="POST">
    <div class="mb-4">
      <label for="url-input" class="form-label"></label>
      <input type="url" class="form-control" name="originalUrl" id="url-input" placeholder="Input URL here" required>
    </div>
    <button type="submit" class="btn btn-lg btn-primary">Shorten</button>
  </form>
  {{/if}}

 </main>

 <script>
  function copyToClipboard() {
    navigator.clipboard
      .writeText("{{ shortenedUrl }}")
      .then(() => swal("Shortened Url is Copied!", "", "success"))
      .catch(e => swal("Copy Error!", e, "error"))
  }  
</script>